{
    "name": "yiisoft/yii-filesystem",
    "type": "library",
    "description": "yii-filesystem",
    "keywords": [
        "filesystem",
        "file",
        "system"
    ],
    "homepage": "https://www.yiiframework.com/",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiisoft/yii-filesystem/issues?state=open",
        "forum": "https://www.yiiframework.com/forum/",
        "wiki": "https://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii",
        "source": "https://github.com/yiisoft/yii-filesystem"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "league/flysystem": "^2.0",
        "yiisoft/aliases": "^1.1.0",
        "yiisoft/di": "^3.0@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "roave/infection-static-analysis-plugin": "^1.5",
        "vimeo/psalm": "^4.2"
    },
    "autoload": {
        "psr-4": {
            "Yiisoft\\Yii\\Filesystem\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiisoft\\Yii\\Filesystem\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        },
        "config-plugin": {
            "common": "config/common.php",
            "providers": "config/providers.php"
        }
    },
    "scripts": {
        "phan": "phan --progress-bar -o analysis.txt",
        "test": [
            "phpunit --colors --no-interaction"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
